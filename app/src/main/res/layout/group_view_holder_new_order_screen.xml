<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cons"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_group_view_holder_new_order_heading"
            app:layout_constraintTop_toTopOf="parent"
            android:drawablePadding="16dp"
            android:fontFamily="@font/cabin"
            android:drawableRight="@drawable/down_arrow"
            android:gravity="left|center"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/heading_2_text_size"
            android:drawableEnd="@drawable/down_arrow" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:text="id#56687" android:layout_marginTop="8dp"
              android:id="@+id/textView_order_id"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
              android:textSize="16sp"
              app:layout_constraintEnd_toStartOf="@+id/button_accept" android:layout_marginEnd="8dp"
              android:layout_marginRight="8dp"/>
    <TextView
            android:text="50000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_order_amount" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/textView_order_id"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="14sp"/>
    <Button
            android:text="@string/card_new_order_accept_bttn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/button_accept" android:textSize="20sp"
            android:textAllCaps="false" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintEnd_toStartOf="@+id/button_decline"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="Decline"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/button_decline" android:textSize="20sp"
            android:textAllCaps="false" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_group_view_holder_new_order_heading"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="0.0"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/text_group_view_holder_new_order_progress_bar"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="8dp"
            tools:layout_editor_absoluteX="245dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>