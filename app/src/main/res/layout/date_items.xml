<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:id="@+id/date_items_parent"
        android:layout_height="wrap_content"
android:background="@drawable/shape_rectangle_white_bg"
>


    <TextView
            android:text="13"
            android:textSize="14sp"
            android:padding="8dp"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDate"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/cabin"


    />
    <TextView
            android:text="\u20B9 1000000"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewEarning"
            android:fontFamily="@font/cabin"
android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDate"
            app:layout_constraintStart_toStartOf="@+id/textViewDate"
            app:layout_constraintEnd_toEndOf="@+id/textViewDate"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintVertical_bias="0.0" android:layout_marginBottom="8dp" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>