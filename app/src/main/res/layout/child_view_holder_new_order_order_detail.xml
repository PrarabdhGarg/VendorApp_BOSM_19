<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:id="@+id/linear_child_view_holder_new_order_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:id="@+id/text_child_view_holder_new_order_item_name"
            android:layout_gravity="start"
            android:text="@string/test_item_name"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:text="X"
            android:id="@+id/text_child_view_holder_new_order_multiplication"
            android:padding="@dimen/default_padding"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:padding="@dimen/default_padding"
            android:text="@string/test_item_quantity"
            android:id="@+id/text_child_view_holder_new_order_item_quantity"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/text_child_view_holder_new_order_item_cost"
            android:padding="@dimen/default_padding"
            android:text="@string/test_amount"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>