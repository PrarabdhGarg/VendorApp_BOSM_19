<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="0dp"
            android:textSize="@dimen/heading_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/default_padding"
            android:gravity="center"
            android:textAllCaps="true"
            android:fontFamily="@font/cabin"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:id="@+id/text_card_compl_order_order_id"
            android:text="@string/test_order_number"
            android:layout_height="wrap_content" />

    <TextView
            android:layout_width="0dp"
            android:textSize="@dimen/heading_text_size"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/default_padding"
            android:gravity="center"
            android:fontFamily="@font/cabin"
            android:textAllCaps="true"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:id="@+id/text_card_compl_order_total_amount"
            android:text="@string/test_total_amount"
            android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/text_card_compl_order_order_id"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/default_margin"
            android:id="@+id/recycle_card_compl_order_menu"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>